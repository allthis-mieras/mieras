---
interface WorkItemProps {
  title: string;
  client: string;
  year: number;
  role: string[];
  video: string;
  size: "S" | "M" | "L";
}

const props = Astro.props as WorkItemProps;
const { title, client, year, role, video, size } = props;

const sizeClasses = {
  S: "col-span-1",
  M: "col-span-2",
  L: "col-span-3",
};
---

<div class={`work-item ${sizeClasses[size]}`}>
  <video class="work-item-bg-video" autoplay loop muted>
    <source src={video} type="video/mp4" />
  </video>
  <div class="work-item-content">
    <h3>{client}</h3>
    <p>{year}</p>
    <div class="role-pills">
      {role.map((r) => <span class="pill">{r}</span>)}
    </div>
  </div>
</div>

<style>
  .work-item {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-default);
    aspect-ratio: 16 / 10;
    mix-blend-mode: multiply;
  }

  .work-item-bg-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    filter: grayscale(1);
    background-blend-mode: multiply;
  }

  .work-item-content {
    position: relative;
    z-index: 1;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    padding: 1rem;
  }

  .role-pills {
    display: flex;
    gap: 0.5rem;
  }

  .pill {
    background: #0070f3;
    padding: 0.5rem 1rem;
    border-radius: 999px;
  }
</style>
