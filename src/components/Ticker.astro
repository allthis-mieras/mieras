---
// Ticker.astro
interface Props {
  speed?: number;
  direction?: "left" | "right";
}

// Stel standaardwaarden in
const defaultSpeed = 40;
const defaultDirection = "left";
const { speed = defaultSpeed, direction = defaultDirection } = Astro.props;
const translateDirection =
  direction === "left" ? "translateX(-100%)" : "translateX(100%)";
---

<section class="stretch containe my-32">
  <div class="ticker-wrap flex gap-2">
    <div
      class="ticker"
      style={`--speed: ${speed}s; --translate-direction: ${translateDirection};`}
    >
      <span class="item-collection-1">
        <slot />
      </span>
      <span class="item-collection-2">
        <slot />
      </span>
    </div>
  </div>
</section>

<style>
  .ticker-wrap {
    width: 100%;

    /* overflow: hidden; */
    white-space: nowrap;
    /* background-color: #fff960; */
    color: #000;
    display: flex;
    padding: 0.2rem var(--gap-default);
    border-radius: var(--radius-default);
  }
  .ticker {
    display: inline-block;
    animation: marquee var(--speed) linear infinite;
  }
  .item-collection {
    display: flex;
    justify-content: center;
  }

  .item-collection-1 {
    position: relative;
    left: 0%;
    animation: swap var(--speed) linear infinite;
  }

  :global(.item) {
    display: inline-block;
    padding: 0 1rem;

    color: black;
    font-weight: 800;
    font-family: sans-serif;
    border-radius: 100vw;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: var(--translate-direction);
    }
  }

  @keyframes swap {
    0%,
    50% {
      left: 0%;
    }
    50.01%,
    100% {
      left: 100%;
    }
  }
</style>
