---
// TickerItem.astro
interface Props {
  label: string;
}

const { label } = Astro.props;
---

<span class="marquee-item">{label}</span>

<style>
  span {
    font-family: var(--font-family-special);
    font-size: var(--step-4);
    padding: calc(var(--space-3xl) * 0.85) var(--space-3xl) var(--space-3xl)
      var(--space-3xl);
    color: var(--background);
    background-color: var(--font-color);
    text-edge: cap alphabetic;
    leading-trim: both;
  }

