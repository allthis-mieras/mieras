    <MarqueeItem label="UX / UI" />
    <MarqueeItem label="Prototyping" />
    <MarqueeItem label="Design Sprints" />
    <MarqueeItem label="Creative Direction" />
    <MarqueeItem label="(Rapid) Prototyping" />
    <MarqueeItem label="Design Systems" />
    <MarqueeItem label="Design Critiques" />
    <MarqueeItem label="Pitching & Presenting" />
    <MarqueeItem label="Front-End Development" />
  </Marquee>

  <WorkOverview />
  <Photography />
  <Contact />
</DefaultLayout>

<script>
  // LENIS
  import Lenis from "lenis";
  document.addEventListener("DOMContentLoaded", () => {
    const lenis = new Lenis({
      lerp: 0.125, // Lower values create a smoother scroll effect
      smoothWheel: true, // Enables smooth scrolling for mouse wheel events
      syncTouch: true,
      syncTouchLerp: 0.075,
    });

    function raf(time) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }

    requestAnimationFrame(raf);
  });

